# Backend Environment Configuration
# CRITICAL: Copy this file to .env and fill in your values
# NEVER commit the actual .env file!

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hevycoach

# JWT Secret Key - Generate a strong random key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Algorithm
JWT_ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Encryption key for API credentials (Fernet)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# Yazio API Credentials (for nutrition tracking)
YAZIO_EMAIL=your-yazio-email@example.com
YAZIO_PASSWORD=your-yazio-password
